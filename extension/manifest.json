{
  "name": "Whisper",
  "version": "1.0",
  "manifest_version": 2,
  "description": "whisper",
  "browser_action": {
    "default_icon": "img/icon-tiny.png",
    "default_popup": "popup.html"
  },
  "minimum_chrome_version": "6",
  "permissions": [ "contextMenus", "tabs", "storage" ],
  "background": {
    "scripts": ["js/contextmenu.js"]
  },
  "web_accessible_resources" : ["img/lock.png"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["js/jquery-1.8.3.min.js", "js/jquery.livequery.js", "js/main.js", "js/EncryptedForms.js", "js/aes.js"]
    }
  ],
  "icons": {  
    "16": "img/icon-bitty.png",
    "32": "img/icon-tiny.png",
    "48": "img/icon-small.png",
    "64": "img/icon-medium.png",
    "128": "img/icon-large.png"
  }
}