{
    "name": "Whisper",
    "description": "Encrypted messaging made easy.",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*"
    ],
    "browser_action": {
        "default_title": "Whisper",
        "default_icon": "icon.png",
        "popup": "popup.html"
    }
}